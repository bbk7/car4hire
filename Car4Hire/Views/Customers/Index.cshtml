@model IEnumerable<Car4Hire.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered" id="myTable">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.f_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.l_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.image)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.f_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.l_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.type)
                </td>
                <td>
                    <img src="~/Images/@Html.DisplayFor(m => item.Car.image)" width="150" height="150" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.cId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.cId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.cId })
                </td>
            </tr>
        }

    </tbody>

</table>

<script>

    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>